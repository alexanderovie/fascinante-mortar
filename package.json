{
  "name": "mortar-nextjs",
  "version": "0.1.5",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:audit": "npx eslint src/app/audit/page.js --resolve-plugins-relative-to . --max-warnings=0 || echo 'Usa: pnpm lint para chequear todo el proyecto'",
    "lighthouse": "bash scripts/lighthouse-test.sh",
    "lighthouse:mobile": "npx lighthouse http://localhost:3000 --preset=perf --only-categories=performance --output=html --output-path=./lighthouse-mobile.html --chrome-flags=\"--headless\"",
    "lighthouse:desktop": "npx lighthouse http://localhost:3000 --preset=desktop --only-categories=performance --output=html --output-path=./lighthouse-desktop.html --chrome-flags=\"--headless\""
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "apexcharts": "^4.7.0",
    "gsap": "^3.12.5",
    "next": "16.0.1",
    "react": "19.2.0",
    "react-animated-cursor": "^2.11.2",
    "react-apexcharts": "^1.7.0",
    "react-compare-slider": "^3.1.0",
    "react-confetti": "^6.4.0",
    "react-confetti-explosion": "^2.1.2",
    "react-countup": "^6.5.3",
    "react-dom": "19.2.0",
    "react-modal-video": "^2.0.2",
    "swiper": "^8.4.7",
    "wowjs": "^1.1.3",
    "yet-another-react-lightbox": "^3.23.0"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "bootstrap": "^5.3.3",
    "eslint": "^8",
    "eslint-config-next": "16.0.1",
    "lighthouse": "^13.0.1",
    "sharp": "^0.34.4",
    "svgo": "^4.0.0"
  }
}
